@model IList<mediatori.Models.Anagrafiche.Agenzia>
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
<h2>Lista Agenzie</h2>

<a href="@Url.Action("Create", "Agenzia")" class="ui-btn ui-corner-all ui-shadow ui-mini ui-btn-inline ui-icon-plus ui-btn-icon-left">Nuova agenzia</a>

@using (Html.BeginForm("Index", "Agenzia", FormMethod.Post, null))
{
    <fieldset>
        <legend>Ricerca agenzia</legend>
        <table>
            <tr>
                <td>Ragione Sociale</td>
                <td>@Html.TextBox("ragioneSociale")</td>
                <td>Codice Fiscale</td>
                <td>@Html.TextBox("partitaIva")</td>
            </tr>

        </table>
        <input type="submit" value="Ricerca" data-inline="true" data-icon="search" data-mini="true" />

    </fieldset>


    if (Model.Count == 0)
    {
        <h3>Non è stata trovata nessuna agenzia. Modificare i filtri di ricerca.</h3>
    }
    else
    {
        <table class="listTable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].soggettoGiuridico.ragioneSociale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].partitaIva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].tipoNaturaGiuridica.descrizione)
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.soggettoGiuridico.ragioneSociale)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.partitaIva)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.tipoNaturaGiuridica)
                    </td>

                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.id })

                    </td>
                </tr>
            }
        </table>
    }
}