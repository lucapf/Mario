@model mediatori.Models.Anagrafiche.Impiego
@{
    ViewBag.title = "Impiego";
    Layout = null;
}


@Html.HiddenFor(m => m.id)


<div class="editor-label">
    @Html.MyInputType(m  => m.dataAssunzione)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.dataLicenziamento)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.stipendioNettoMensile)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.stipendioLordoMensile)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.stipendioLordoAnnuo)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.azienda)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.aziendaSedeLavoro)
</div>

<div class="editor-label">
    @Html.LabelFor(m => m.tipoImpiego)
    <select name="impiego.tipoImpiego.id" id="impiego_tipoImpiego_id" data-mini="true">
        <option value="">---</option>
        @foreach (SelectListItem i in ViewBag.listaTipoImpiego)
        {
            <option value="@i.Value" @((i.Selected) ? "selected" : "")>@i.Text</option>

        }
    </select>
</div>


<div class="editor-label">
    @Html.LabelFor(m => m.categoriaImpiego)
    <select name="impiego.categoriaImpiego.id" id="impiego_categoriaImpiego_id" data-mini="true">
        <option value="">---</option>
        @foreach (SelectListItem i in ViewBag.listaTipoImpiego)
        {
            <option value="@i.Value" @((i.Selected) ? "selected" : "")>@i.Text</option>

        }
    </select>
    @Html.ValidationMessageFor(m => m.categoriaImpiego.id)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.adesioneTFR)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.anticipiTFR)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.mansione)
</div>

<div class="editor-label">
    @Html.MyInputType(m => m.mensilita)
</div>




