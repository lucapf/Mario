@model mediatori.Models.Test.TestClass
@{
    ViewBag.Title = "FlipSwitch";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}





<h2>FlipSwitch</h2>
@using (Html.BeginForm("FlipSwitch", "Test", FormMethod.Post))
{
    <div class="editor-control">
        <div class="editor-row">
            <div class="editor-label">
                <label for="agenzia_stato">Stato:</label>
            </div>
            <div class="editor-value">
                <input data-role="flipswitch" name="isEnabled" id="stato" @(Model.isEnabled == true ? "checked=checked" : "") data-on-text="Attiva" value="true" data-off-text="Non attiva" data-wrapper-class="custom-label-flipswitch custom-size-flipswitch" type="checkbox">
            </div>
        </div>
        <div class="editor-validation">

        </div>
    </div>


    <div data-role="controlgrup" data-type="horizontal">
        <input type="submit" value="Salva" data-inline="true" data-mini="true" />
    </div>
}



<style type="text/css">
    /* Custom indentations are needed because the length of custom labels differs from
            the length of the standard labels */
    .custom-size-flipswitch.ui-flipswitch .ui-btn.ui-flipswitch-on {
        text-indent: -5.9em;
    }

    .custom-size-flipswitch.ui-flipswitch .ui-flipswitch-off {
        text-indent: 0.5em;
    }
    /* Custom widths are needed because the length of custom labels differs from
            the length of the standard labels */
    .custom-size-flipswitch.ui-flipswitch {
        width: 8.875em;
    }

        .custom-size-flipswitch.ui-flipswitch.ui-flipswitch-active {
            padding-left: 7em;
            width: 1.875em;
        }


    .ui-field-contain > label + .custom-size-flipswitch.ui-flipswitch {
        width: 1.875em;
    }
</style>
