@model mediatori.Models.Anagrafiche.Erogazione
@{
    Layout = null;
    ViewData.TemplateInfo.HtmlFieldPrefix = "erogazione";
}
}
@Html.HiddenFor(p => p.id)
@Html.HiddenFor(p => p.praticaId)

<div class="editor-control">
    <div class="editor-row">
        <div class="editor-label">
            @Html.MyLabelFor(m => m.tipoErogazioneId)
        </div>
        <div class="editor-value">
            @Html.DropDownListFor(m => m.tipoErogazioneId, (IEnumerable<SelectListItem>)ViewBag.listaTipoErogazioni, "", new { data_mini = "true" })
        </div>
    </div>
    <div class="editor-validation">
        @Html.ValidationMessageFor(m => m.tipoErogazioneId)
    </div>
</div>

<div class="editor-control">
    @Html.MyInputType(m => m.importo)
</div>

<div class="editor-control">
    @Html.MyInputType(m => m.dataPagamento)
</div>

<div class="editor-control">
    @Html.MyInputType(m => m.dataValuta)
</div>

<div class="editor-control">
    @Html.MyInputType(m => m.nota.valore)
</div>
