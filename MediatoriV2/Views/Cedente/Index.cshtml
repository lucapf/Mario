@model IEnumerable<mediatori.Models.Anagrafiche.Cedente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
    int conta = 0;
    string css;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuovo Cedente", "Create")
</p>
<table class="MyTable">
    <tr class="ui-bar-b">
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataNascita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codiceFiscale)
        </th>

        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model)
    {
        conta++;
        if (conta % 2 == 0)
        {
            css = "ui-bar-d";
        }
        else
        {
            css = "ui-bar-a";
        }
        <tr class="@css">
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataNascita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codiceFiscale)
            </td>
            <td>
                <a class="ui-btn-inline ui-btn ui-icon-info ui-btn-icon-notext ui-corner-all" title="Modifica" href="@Url.Action("Details", new { id= item.id })">Dettagli</a>
            </td>
            <td>
                <a class="ui-btn-inline ui-btn ui-icon-edit ui-btn-icon-notext ui-corner-all" title="Modifica" href="@Url.Action("Edit", new { id= item.id })">Modifica</a>
            </td>
            <td>
                <a class="ui-btn-inline ui-btn ui-icon-delete ui-btn-icon-notext ui-corner-all" title="Cancella" href="@Url.Action("Delete", new { id= item.id })">Cancella</a>
            </td>
        </tr>
    }

</table>
