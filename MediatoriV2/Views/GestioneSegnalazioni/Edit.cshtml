            @Html.ValidationMessageFor(model => model.altroPrestito)
        </div>    
            @Html.HiddenFor(model => model.dataInserimento)
            @Html.HiddenFor(model => model.utenteInserimento)
        
        <p>
            <input type="submit" value="Salva" />
        </p>

}

<div>
