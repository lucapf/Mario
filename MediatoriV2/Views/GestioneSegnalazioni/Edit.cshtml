@model mediatori.Models.Anagrafiche.Segnalazione

@{
    ViewBag.Title = "Edit";
}
<div style="float:right">Censito da:   @Html.DisplayFor(model => model.utenteInserimento) il @Html.DisplayFor(model => model.dataInserimento) </div>

<h2>Segnalazione <strong>@Html.DisplayFor(m=>m.cognome) @Html.DisplayFor(m=>m.nome)</strong></h2>

<script>
        $(function () {
            $("#dataNascita").datepicker({ dateFormat: "yy-mm-dd", changeYear: true, yearRange: "1940:2012" });
        });
</script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nome)
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.cognome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cognome)
            @Html.ValidationMessageFor(model => model.cognome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataNascita)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataNascita)
            @Html.ValidationMessageFor(model => model.dataNascita)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sesso)
        </div>
        <div class="editor-field">
             @Html.RadioButtonList(model => model.sesso,"sesso", (IEnumerable<SelectListItem>)ViewBag.listaSesso)
