@model mediatori.Models.Anagrafiche.DocumentoIdentita

@{
    Layout = null;
}

@Html.HiddenFor(model => model.id)

<div class="editor-label">
    @Html.MyInputType(m => m.dataRilascio)
</div>
<div class="editor-label">
    @Html.MyInputType(m => m.dataScadenza)
</div>
<div class="editor-label">
    @Html.MyInputType(m => m.numeroDocumento)
</div>
<div class="editor-label">
    @Html.LabelFor(m => m.enteRilascio)
    @Html.DropDownListFor(m => m.enteRilascio.id, (IEnumerable<SelectListItem>)ViewBag.listaEnteRilascio, "", new { data_mini = "true" })<br />
    @Html.ValidationMessageFor(m => m.enteRilascio.id)
</div>
<div class="editor-label">
    @Html.LabelFor(m => m.provinciaEnte)
    @Html.DropDownListFor(m => m.provinciaEnte.denominazione, (IEnumerable<SelectListItem>)ViewBag.provinciaRilascio, "", new { data_mini = "true" })<br />
    @Html.ValidationMessageFor(m => m.provinciaEnte.denominazione)
</div>

<div class="editor-label">
    @Html.LabelFor(m => m.comuneEnte)
    @Html.DropDownListFor(m => m.comuneEnte.denominazione, (IEnumerable<SelectListItem>)ViewBag.comuneRilascio, "Selezionare una provincia ...", new { data_mini = "true" })<br />
    @Html.ValidationMessageFor(m => m.comuneEnte.denominazione)
</div>



<script type="text/javascript">
    $(document).on("pageinit", function () {

        $("#provinciaEnte_denominazione").change(function () {
            popolaComboComuni("provinciaEnte_denominazione", "comuneEnte_denominazione");
        })

    });
</script>