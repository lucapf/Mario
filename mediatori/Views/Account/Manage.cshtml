@model mediatori.Models.LocalPasswordModel
@{
    ViewBag.Title = "Gestione account";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
@Html.Partial("commonAccount")
<p class="message-success">@ViewBag.StatusMessage</p>

<p>Modifica password per l'untente <strong>@Model.user</strong>.</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
