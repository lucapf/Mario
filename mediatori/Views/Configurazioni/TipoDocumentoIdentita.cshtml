@model List<mediatori.Models.Anagrafiche.TipoDocumentoIdentita>
@using mediatori.Models
@{
    ViewBag.Title = "Gestione Tipologia Prestito";
}
<h2>Tipologia Prestito</h2>
<h3>@ViewBag.errorMessage</h3>
<h3>@ViewBag.message</h3>
@Html.Partial("commonConfigurazioni")
<fieldset>
    <legend>Inserimento nuova Tipologia Prestito</legend>
@using (Html.BeginForm("TipoDocumentoIdentita", "Configurazioni", FormMethod.Post))
{
 <text>descrizione <input type="text" name="descrizione"/> <input type="submit" value="inserisci" /></text>
}
</fieldset>
<fieldset>
    <legend>Lista documenti identita configurati</legend>
    <table>
<tr><td><strong>sigla</strong></td><td></td></tr>
@foreach (mediatori.Models.Anagrafiche.TipoDocumentoIdentita tipoDocumentoIdentita in Model)
{
    <tr>
        <td>@tipoDocumentoIdentita.descrizione</td>
        <td>@Html.ActionLink("Cancella", "cancellaTipoDocumentoIdentita", new {id=tipoDocumentoIdentita.id}, null)</td>
    </tr>
    
}
    </table>
</fieldset>
